[Unit]
Description=Flask EC2 Deployment Example
After=network.target

[Service]
User=ec2-user
WorkingDirectory=/home/ec2-user/flask-app/app
ExecStart=/usr/bin/python3.13 app.py
Restart=always
RestartSec=5
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=flask-app

[Install]
WantedBy=multi-user.target
